{
  "name": "embeddings-js",
  "version": "1.0.0",
  "description": "Compressive Semantic Spectra (CSS) - Sparse spectral word embeddings with natural polysemy support",
  "main": "src/index.js",
  "type": "module",
  "scripts": {
    "start": "node src/index.js",
    "test": "node src/test.js",
    "download": "node src/download_parquet.js",
    "prepare": "node src/prepare_vocabulary.js",
    "prepare:frequency-scaled": "node src/prepare_vocabulary.js --strategy=frequency-scaled",
    "prepare:gaussian": "node src/prepare_vocabulary.js --strategy=gaussian",
    "prepare:uniform": "node src/prepare_vocabulary.js --strategy=uniform",
    "train": "node --max-old-space-size=12288 src/train.js",
    "analyze": "node src/analyze_polysemy.js data/snapshots/snapshot_0006_docs30000.json bank",
    "analyze:all": "node src/analyze_polysemy.js --all bank",
    "analyze:simple": "node src/analyze_simple.js",
    "stability": "node src/analyze_stability.js",
    "debug": "node src/debug.js"
  },
  "keywords": [
    "embeddings",
    "word2vec",
    "nlp",
    "ml"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "node-fetch": "^3.3.2",
    "parquet-wasm": "^0.7.1",
    "parquetjs": "^0.11.2"
  }
}
